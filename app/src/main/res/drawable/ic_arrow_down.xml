<!-- res/drawable/spinner_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Normal state -->
    <item android:state_enabled="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/green_light"/> <!-- Replace with your green color -->
                    <corners android:radius="4dp"/>
                </shape>
            </item>
            <item android:right="8dp" android:top="8dp" android:bottom="8dp">
                <bitmap android:src="@android:drawable/arrow_down_float" android:gravity="right|center_vertical"/>
            </item>
        </layer-list>
    </item>
</selector>
